{
  "name": "ladder-backend",
  "version": "1.0.0",
  "description": "Backend for Ladder app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start-with-migrations": "node scripts/run-migration.js && node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js'",
    "validate-env": "node scripts/validate-env.js",
    "setup-env": "node scripts/setup-environment.js",
    "generate-jwt-secret": "node scripts/generate-jwt-secret.js",
    "migrate": "node scripts/run-migration.js",
    "migrate:railway": "node scripts/run-migration.js || echo 'Migration completed with warnings'",
    "db:migrate": "node scripts/run-migration.js",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node scripts/backup-database.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.891.0",
    "@aws-sdk/s3-request-presigner": "^3.891.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
