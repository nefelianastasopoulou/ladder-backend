# Expo Go Testing Environment Configuration
# This file is used when testing with Expo Go app

# API Configuration for Expo Go
# Update this URL to your actual Railway deployment URL
EXPO_PUBLIC_API_URL=https://ladder-backend-production.up.railway.app/api
EXPO_PUBLIC_ENVIRONMENT=staging
EXPO_PUBLIC_DEBUG_MODE=true

# App Configuration
EXPO_PUBLIC_APP_NAME=Ladder (Expo Go)
EXPO_PUBLIC_APP_VERSION=1.0.0-expo-go

# Feature Flags for Expo Go Testing
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Network Configuration
EXPO_PUBLIC_NETWORK_TIMEOUT=15000
EXPO_PUBLIC_RETRY_ATTEMPTS=3

# Railway-specific configuration
EXPO_PUBLIC_RAILWAY_DEPLOYMENT=true
